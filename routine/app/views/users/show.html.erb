<% provide(:title, @user.first_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.first_name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.buses.any? %>
      <h3>CTA Bus Routes (<%= @user.buses.count %>)</h3>
      <ol class="buses">
        <%= render @buses %>
      </ol>
    <% end %>
  </div>
</div>
