<div class = "show-container">
  <div class = "show-left-div">
  </div>
  <div class = "show-main-div">
    <div class = "main-flex-container">
      <div class = "section-title">
        <h2> <%= "#  " + @rt + "  Route Direction" %> </h2>
      </div>
      <div class = "login-container">
        <div class = "button">
          <ul class = "route-ul">
            <% @busdirections.each do |d| %>
              <li>
                <%= link_to d["dir"], busstop_path(rt: @rt, rtnm: @rtnm, rtdir: d["dir"]), class: "route-button" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class = "show-right-div">
  </div>
</div>
