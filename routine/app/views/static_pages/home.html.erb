<div class = "show-container">
  <div class = "show-left-div">
  </div>
  <div class = "show-main-div">
    <% if logged_in? %>
      <%= render 'addroute_form' %>
    <% else %>
      <div class = "main-flex-container">
        <div class = "logo-container">
          <%= image_tag("logo.png", alt: "Rails logo")%>
        </div>
        <div class = "login-container">
          <div class = "button">
            <%= link_to "Log In", login_path, class: "login-button" %>
          </div>
          <div class = "button">
            <%= link_to "Sign up now!", signup_path, class: "register-button" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class = "show-right-div">
  </div>
</div>
